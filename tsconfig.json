{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react-native", // Fixes JSX errors
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".", // Base for path aliases
    "paths": {
      "@/*": ["*"] // Maps @/ to root directory
    }
  },
  "exclude": ["node_modules"]
}